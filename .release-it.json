{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": true,
    "access": "public"
  },
  "hooks": {
    "before:init": ["pnpm run lint", "pnpm run build"],
    "after:bump": "pnpm run build"
  }
}
